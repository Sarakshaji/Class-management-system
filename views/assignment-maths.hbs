<body>

  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <form action="/submit-maths" method="POST" enctype="multipart/form-data">
            <div class="form-group mt-3">
              <label for="fullname">Full Name</label>
              <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Full Name">

            </div>
            <div class="form-group mt-3">
              <label for="rollnumber">Roll Number</label>
              <input type="text" class="form-control" id="rollnumber" name="rollnumber" placeholder="Roll Number">

            </div>
            <div class="form-group mt-3">
              <label for="class">Class</label>
              <input type="text" class="form-control" id="class" name="class" placeholder="Class">

            </div>
            <div class="form-group mt-3">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Email">

            </div>

            {{!-- <div class="mt-4">
              <input type="file" id="myfile" name="myfile"><br><br> --}}
              <label for="myfile">Select files:</label>
              <input type="file" id="myfile" name="myfile" multiple><br><br>

            </div>
            <div class="mt-4">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>


          </form>
        </div>
      </div>
    </div>
  </section>

